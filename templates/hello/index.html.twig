{% extends 'base.html.twig' %}

{% block title %}I've changed the title!{% endblock %}

{% block body %}
    <div>
        {% if messageList|length > 0 %}
            {% for key, message in messageList|slice(0, limit) %}
                <div>
                    <a href="{{ path('app_show_one', { id: key }) }}">{{ message.message }}</a>
                </div>
                {{ include('hello/_message.html.twig', {message: message}) }}
            {% endfor %}
        {% else %}
            There's nothin here yet!
        {% endif %}
    </div>
{% endblock %}
